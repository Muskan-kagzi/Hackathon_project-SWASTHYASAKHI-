    <!-- Self-Examination Guides -->
    <section id="self-check" class="section self-check">
        <div class="container">
            <h2 class="section-title">Self-Examination Guide</h2>
            
            <!-- Breast Self-Exam -->
            <div class="mb-6">
                <h3 class="text-xl font-bold mb-4 text-center text-primary">Breast Self-Examination</h3>
                <div class="steps-grid">
                    <div class="step-card">
                        <div class="step-number">1</div>
                        <h4 class="font-bold mb-2">Look in Mirror</h4>
                        <p class="text-sm text-gray-600">Check for changes in size, shape, or skin texture</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">2</div>
                        <h4 class="font-bold mb-2">Arms Raised</h4>
                        <p class="text-sm text-gray-600">Lift arms overhead and look for dimpling or changes</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">3</div>
                        <h4 class="font-bold mb-2">Lying Down</h4>
                        <p class="text-sm text-gray-600">Use flat fingers to feel for lumps in circular motions</p>
                    </div>
                    
                    <div class="step-card">
                        <div class="step-number">4</div>
                        <h4 class="font-bold mb-2">In Shower</h4>
                        <p class="text-sm text-gray-600">Check with soapy hands for easier movement</p>
                    </div>
                </div>
            </div>

            <!-- Cervical Health Info -->
            <div class="cervical-info">
                <h3 class="text-xl font-bold mb-4 text-center text-secondary">Cervical Health Awareness</h3>
                <div class="cervical-grid">
                    <div class="text-center">
                        <div class="card-icon secondary">
                            <svg width="32" height="32" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
                                <path fill-rule="evenodd" d="M4 5a2 2 0 012-2v1a1 1 0 102 0V3a2 2 0 012 2v6a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 2a1 1 0 011-1h4a1 1 0 110 2H8a1 1 0 01-1-1zm0 2a1 1 0 011-1h4a1 1 0 110 2H8a1 1 0 01-1-1z"/>
                            </svg>
                        </div>
                        <h4 class="text-lg font-bold mb-2">Pap Smear Test</h4>
                        <p class="text-gray-600">Regular Pap smears detect abnormal cervical cells early. Recommended every 3 years for women 21-65.</p>
                    </div>
                    
                    <div class="text-center">
                        <div class="card-icon secondary">
                            <svg width="32" height="32" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10 2L3 7v11a1 1 0 001 1h3v-8h6v8h3a1 1 0 001-1V7l-7-5z"/>
                            </svg>
                        </div>
                        <h4 class="text-lg font-bold mb-2">HPV Vaccine</h4>
                        <p class="text-gray-600">HPV vaccination prevents most cervical cancers. Best when given before first sexual activity.</p>
                    </div>
                </div>
            </div>
        </div>
